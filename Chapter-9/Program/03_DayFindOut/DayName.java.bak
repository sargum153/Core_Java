	
// Develop a program to read day number from keyboard. Print it's day name 1-> Sunday, 2-> Monday... so on


import java.util.Scanner;

class  DayName {
	public static void main(String[] args){
		Scanner scn = new Scanner(System.in);

		System.out.print("Enter day number in between (1 to 7): ");
		int dayNum = scn.nextInt();

		if(dayNum == 1)
			System.out.println("Today is SUNDAY");
		else if(dayNum == 2)
			System.out.println("Today is MONDAY");
		else if(dayNum == 3)
			System.out.println("Today is TUESDAY");
		else if(dayNum == 4)
			System.out.println("Today is Wednesday");
		else if(dayNum == 5)
			System.out.println("Today is Thursday");
		else if(dayNum == 6)
			System.out.println("Today is Friday");
		else if(dayNum == 7)
			System.out.println("Today is Saturday");
		else
			System.out.println("Invalid Day number. Number must be in between 1 to 7");
	}	
}